<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="264.0" prefWidth="174.0" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Login" />
    <Label text="Member ID:" />
    <TextField fx:id="memberIdField" scaleX="0.8" />
    <Label text="Password:" />
    <TextField fx:id="passwordField" scaleX="0.8" />
    <Button fx:id="loginButton" onAction="#handleLogin" text="Login" />
    <Button fx:id="forgotPasswordButton" onAction="#showResetPassword" text="Forgot Password?" />
    <Button fx:id="createAccountButton" onAction="#showCreateAccount" text="Create Account" />
</VBox>
